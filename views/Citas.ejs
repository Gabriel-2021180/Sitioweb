    <div id="calendar" style="color:white"></div>
    <!-- En la vista 'Citas' -->
    
  
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.6/index.global.min.js"></script>
    <script src="/javascript/calendar.js"></script>
    
   

      
      
    

  <style>
 .fc-day {
    background-color: #FFFF;
    border: none;
    padding: 30px;
    color: #CCCCCC;
    font-weight: bold;
    
  }
  
  fc-daygrid-day-number{
    color: #1d1e20;
  }
    .modal {
      color: rgb(255, 255, 255);
      display: none;
      position: fixed;
      z-index: 1;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      overflow: auto;
      background-color:#1d1e20;
      background-color: #1d1e20;
    }
  
    .modal-content {
      color: rgb(255, 255, 255);
      background-color: #ffffff7a;
      margin: 15% auto;
      padding: 20px;
      border: 1px solid #888;
      width: 80%;
    }
  
    .close {
      color: #aaa;
      float: right;
      font-size: 28px;
      font-weight: bold;
    }
  
    .close:hover,
    .close:focus {
      color: black;
      text-decoration: none;
      cursor: pointer;
    }
  </style>
  <div id="eventModal" class="modal">
    <div class="modal-content">
      <span id="eventClose" class="close">&times;</span>
      <h2>Detalles de la cita</h2>
      <p id="eventMotivo"></p>
      <p id="eventFecha"></p>
      <p id="eventHora"></p>
      <p id="eventHoraFin"></p>
      <p id="eventabogado"></p>

      <p id="eventEstado"></p>
    </div>
  </div>
  
