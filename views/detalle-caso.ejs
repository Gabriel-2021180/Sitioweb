<!DOCTYPE html>
<html lang="es">

		
    <link rel="stylesheet" href="/css/main.css" />
		<link rel="stylesheet" href="/sass/main.scss">

		<noscript><link rel="stylesheet" href="/public/css/noscript.css" /></noscript>
    <style>
      .container {
        padding: 20px;
        background-color: #ffffff21;
        border-radius: 5px;
        margin: 0 auto;
        max-width: 600px;
      }
    
      .container h1 {
        font-size: 24px;
        margin-bottom: 10px;
      }
    
      .container p {
        margin-bottom: 10px;
      }
    
      .container strong {
        font-weight: bold;
      }
    
      .container ul {
        list-style-type: none;
        padding: 0;
        margin: 0;
      }
    
      .container li {
        margin-bottom: 20px;
      }
    
      .container h3 {
        font-size: 20px;
        margin-bottom: 10px;
      }
    
      .container a {
        display: inline-block;
        padding: 8px 16px;
        background-color: #942833;
        color: #fff;
        text-decoration: none;
        border-radius: 5px;
      }
    
      .container .separator {
        height: 1px;
        background-color: #ccc;
        margin-top: 10px;
        margin-bottom: 20px;
      }
    
      @media (max-width: 480px) {
        .container {
          max-width: 100%;
          padding: 10px;
        }
    
        .container h1 {
          font-size: 20px;
        }
    
        .container p,
        .container strong {
          font-size: 14px;
        }
    
        .container h3 {
          font-size: 18px;
        }
    
        .container a {
          font-size: 14px;
        }
      }
    </style>
    <body  class="is-preload">
      <div id="page-wrapper">
        <%- include('../views/layouts/layout-index.ejs') %>


<div class="container">
  <h1><strong> Detalles del Caso</strong></h1>
  <h3><strong><%= caso.nombrecaso %></strong></h3>
  <p><strong>Descripci칩n:</strong> <%= caso.descripcion %></p>
  <p><strong>Abogado:</strong> <%= caso.abogado.nombres %> <%= caso.abogado.apellidos %></p>
  <p><strong>Fecha de inicio:</strong> <%= caso.fechaini.toDateString() %></p>
  <% if (caso.fechafin) { %>
    <p><strong>Fecha de fin:</strong> <%= caso.fechafin.toDateString() %></p>
  <% } %>

  

  <h1><strong> Documentos </strong></h1>
  <% if (documentos.length === 0) { %>
  <p>No se encontraron documentos asociados a este caso.</p>
  <% } else { %>
    <table>
      <thead>
        <tr>
          <th>Nombre de Documento</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% documentos.forEach(documento => { %>
          <tr>
            <td><%= documento.titulo %></td>
            <td>
              <button class="button primary" onclick="verDocumento('<%= documento._id %>')">Ver</button>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } %>
  <p><strong>Habla con Legal-IA nuestro abogado virtual, sobre tu caso!</strong></p>
  <!-- Bot칩n de chat -->
  <a  href="/chat/<%= caso._id %>">Legal-IA</a>
</div>
</section>
  
</div>
</body>
<script>
    function verDocumento(documentoId) {
      // Hacer una solicitud GET al nuevo endpoint para obtener la URL firmada
      fetch(`/get-documento-url/${documentoId}`)
        .then(response => response.json())
        .then(data => {
          // Abrir la URL firmada en una nueva pesta침a
          window.open(data.url, '_blank');
        })
        .catch(error => {
          console.error(error);
          alert("Ocurri칩 un error al obtener la URL del documento");
        });
    }
</script>
