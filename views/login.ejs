  <!DOCTYPE html>
  <html lang="en">
     <head>
        <title>Inicio de sesion</title>
      
        <link rel="preconnect" href="https://fonts.gstatic.com">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
        <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;600&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="/css/login2style.css">
        <script>
          function togglePassword() {
            var passwordField = document.getElementById("password");
            var eyeIcon = document.getElementById("eye");
      
            if (passwordField.type === "password") {
              passwordField.type = "text";
              eyeIcon.className = "fa fa-eye-slash";
            } else {
              passwordField.type = "password";
              eyeIcon.className = "fa fa-eye";
            }
          }
        </script>
      </head>
  <body>
     <div class="background">
       <div class="shape"></div>
       <div class="shape"></div>
     </div>
     <form action="/login" method="post">
       <% const disableInputs = error && error.length > 0 && error[0].startsWith('Demasiadas solicitudes'); %>
       <% if (error && error.length > 0) { %>
         <div class="alert alert-danger" role="alert">
           <%= error[0] %>
         </div>
       <% } %>
       <h3>Inicio de sesión</h3>
   
       <label for="username">Nombre de usuario</label>
       <input type="text" name="username" placeholder="Usuario123" id="username" <% if (disableInputs) { %>disabled<% } %>>
   
       <label for="password">Contraseña</label>
       <input type="password"name="password" placeholder="Contraseña123" id="password" <% if (disableInputs) { %>disabled<% } %>>
       <span><i class="fa fa-eye" aria-hidden="true" type="button" id="eye" onclick="togglePassword()"></i></span>
   
      
       <button type="submit" <%= error && error.length > 0 && error[0].startsWith('Demasiadas solicitudes') ? 'disabled' : '' %> > Iniciar sesion </button>
       <div class="social">
         <div class="go"><i class=""></i><a href="/signup">Registrate</a></div>
       </div>
     </form>
   </body>
  </html>
  